{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "stopwatch",
  "version": "0.1.0",
  "identifier": "com.stopwatch.dev",
  "build": {
    "beforeBuildCommand": "pnpm build:vite",
    "beforeDevCommand": "pnpm dev:vite",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Stopwatch",
        "width": 280,
        "height": 180,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
